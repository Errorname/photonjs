datasource db {
  provider = "sqlite"
  url      = env("SQLITE_URL")
  default  = true
}

generator photon {
  provider  = "photonjs"
  output    = "@generated/photon"
  transpile = false
}

model User {
  id       String @id @default(uuid())
  username String
  posts    Post[]
}

model Post {
  i2d  String @id @default(uuid())
  data String
  user User?
}